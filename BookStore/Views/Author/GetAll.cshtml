@model IEnumerable<BookStore.Models.Domain.Author>
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-purple" href="/Author/Add">+ Add more</a>
           
            <style>.btn-purple {
    background-color: #6a5acd; 
    color: white; 
}
</style>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Authors</h3>

            <table class="table table-bordered  border-secondary text-center">
                 
                <thead>
                    <tr>
                        <th>AuthorName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td>@item.AuthorName</td>
                            <td style="white-space: nowrap; margin-right: 0px; padding:0;" >
                            
                                <a class="btn btn-success"  href="/Author/Update?id=@item.Id"> <i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>