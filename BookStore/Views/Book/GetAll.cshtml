@model IEnumerable<BookStore.Models.Domain.Book>
@{

}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-purple" href="/Book/Add">+ Add more</a>

            <style>
                .btn-purple {
                    background-color: #6a5acd;
                    color: white;
                }
            </style>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Books</h3>

            <table class="table table-bordered border-secondary text-center">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Isbn</th>
                        <th>Total Pages</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>


                            <td style="white-space: nowrap;">
                                <a class="btn btn-success" href="/Book/Update?id=@item.Id" style="margin-right: 5px;">
                                    <i class="bi bi-pen"></i>
                                </a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?id=@item.Id">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>