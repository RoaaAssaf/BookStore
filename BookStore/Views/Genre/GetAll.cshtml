@model IEnumerable<BookStore.Models.Domain.Genre>
@{

}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Genre</h3>
            
            <div class="container pt-5">
                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-purple" href="/Genre/Add">+ Add more</a>

                        <style>
                            .btn-purple {
                                background-color: #6a5acd;
                                color: white;
                            }
                        </style>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h3>Genres</h3>

                        <table class="table table-bordered border-secondary table-bordered Text-center">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td style="white-space: nowrap;">
                                            <a class="btn btn-success" style="margin-right: 5px;" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>


        </div>
    </div>
</div>